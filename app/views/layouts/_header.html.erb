<% if user_signed_in? %>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete%>
  <%= link_to "プロフィール",user_path(current_user.id) %>
  <%= link_to "投稿する",new_post_path %>
<% elsif admin_signed_in?%>
  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete%>
  <%= link_to "User一覧",admin_users_path %>
  <%= link_to "投稿一覧",admin_posts_path %>
  <%= link_to "タグ一覧",admin_tags_path %>
<% else %>
  <%= link_to "About", about_path %>
  <%= link_to "新規登録", new_user_registration_path %>
  <%= link_to "ログイン", new_user_session_path %>
  <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
<% end %>

<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select([['Tag'], ['Post']]) %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
      <% elsif admin_signed_in?%>
      <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select([['Tag'], ['Post']]) %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>