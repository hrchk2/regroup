<% if @tag.blank? %>
<h2>お探しのハッシュタグは管理者によって削除されました</h2>
<% else %>
<h2>ハッシュタグ #<%= @tag.name %></h2>
<table>
  <thead>
    <tr>
      <th>オーナー</th>
      <th>Title</th>
      <th>body</th>
      <th>人数</th>
      <th>ステータス</th>
      <th>自由型or承認型</th>
      <th>募集状況</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.name %></td>
        <td> <%= link_to post.title,post_path(post) %></td>
        <td> <%= post.body %></td>
        <td><%= post.capacity %></td>
        <td><%= post.status %></td>
        <td><%= post.is_free %></td>
        <td><%= post.is_stop %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<% end %>