<h1>post.show</h1>

<h2>登録情報 <%= link_to "編集する",edit_post_path(@post)%></h2>

<ul>
    <li>
        <p>title</p>
        <%= @post.title %>
    </li>

    <li>
        <p>body</p>
        <%= render_with_hashtags(@post.body) %>
    </li>

    <li>
        <p>人数</p>
        <%= @post.capacity %>
    </li>

    <li>
        <p>公開ステータス</p>
        <%= @post.status %>
    </li>

    <li>
        <p>自由参加型</p>
        <%= @post.is_free %>
    </li>

    <li>
        <p>募集状況</p>
        <%= @post.is_stop %>
    </li>

   <li id="post_<%= @post.id %>">
       <%= render "public/favorites/favorite", post: @post %>
   </li>

</ul>


<h5>コメント欄</h5>
<%= form_with model: [@post,@comment],local: true do |f| %>
  <%= f.hidden_field :post_id, :value => @post.id %>
  <%= f.text_area :body, size: "40x5" %>
  <%= f.submit '送信', class: "btn-sm btn-primary" %>
<% end %>

<h5>コメント一覧</h5>
<table>
  <thead>
    <tr>
      <th>コメント投稿者</th>
      <th>コメント内容</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.name %></td>
        <td><%= comment.body %></td>
        <td><%= link_to "削除", post_comment_path(@post, comment), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>