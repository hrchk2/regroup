<h1>post.edit</h1>

<%= form_with model:@post,local:true do |f| %>
  <div class="form-group">
    <%= f.label :title,"タイトル" %>
    <%= f.text_field :title%>
  </div>
  <div class="form-group">
    <%= f.label :body,"内容" %>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.label :capacity,"参加人数" %>
    <%= f.select :capacity, capacity_select %>
  </div>
  <div class="form-group">
      <%= f.label :"参加設定", class: "col-sm-4" %>
    <div class="form-check">
      <%= f.radio_button :is_free, true %>
      <%= f.label :is_free_true, "自由参加可" %>
      <%= f.radio_button :is_free, false%>
      <%= f.label :is_free_false, "オーナー承認制"%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :"公開範囲", class: "col-sm-4" %>
    <div class="form-check">
      <%= f.radio_button :status, Post.statuses.key(0) %>
      <%= f.label :status_公開, "公開"%>
      <%= f.radio_button :status,Post.statuses.key(1) %>
      <%= f.label :status_下書き, "下書き"  %>
    </div>
  </div>

  <div class="form-group">
      <%= f.label :"募集状況", class: "col-sm-4" %>
    <div class="form-check">
      <%= f.radio_button :is_stop, false %>
      <%= f.label :is_stop_false, "募集中" %>
      <%= f.radio_button :is_stop, true %>
      <%= f.label :is_stop_true, "募集停止" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to '投稿の削除',post_path(@post),method: :delete,data: {confirm: '本当に消しますか？'} %>