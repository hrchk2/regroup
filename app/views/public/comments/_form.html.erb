 <div class="col-10 offset-1 col-sm-6 offset-sm-3">
    <%= form_with model: [post,comment], local: false do |f| %>
      <%= f.hidden_field :post_id, :value => post.id %>
      <%= f.text_area :body, size: "40x5",class: "form-control w-100 mb-1" %>
      <%= f.submit '送信', class: "btn-sm btn-primary float-right" %>
    <% end %>
</div>