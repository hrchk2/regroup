<div class="container">
  <div class="row mt-3">
    <div class="col-6 offset-2 mt-3 mb-2 ">
        <h1>検索一覧</h1>
    </div>
  </div>

  <div class="row mt-2">
      <% if @range == "Tag" %>
        <table class="table table-bordered col-6 offset-2 text-center">
             <thead class="bg-light">
            <tr>
              <th>タグ名</th>
              <th>タグ付き投稿数</th>
              <th></th>
            </tr>
          </thead>
          <tbody class="border-bottom">
            <% @tags.each do |tag| %>
              <tr>
                <td><%= tag.name %></td>
                <td><%= tag.posts.count %></td>
                <td><%= link_to admin_tag_path(tag),method: :delete,class: "btn btn-sm btn-danger" do%>
                    <i class="fas fa-trash-alt "></i>
                    <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
      
        <% @posts.each do |post| %>
          <table class="table table-bordered col-6 offset-2 text-center">
              <thead>
                <tr>
                  <th colspan="3">
                    <%=link_to post.title,post_path(post),class:"text-dark" %>

                    <!--付いているタグのeach-->
                    <% post.tags.each do |tag| %>
                      #<%= tag.name %></p>
                    <% end %>

                  </th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row" colspan="1" class="align-middle">オーナー名</th>
                  <td colspan="2" >
                    <%= link_to user_path(post.user) do %>
                      <%= image_tag post.user.get_profile_image, size:'50x50',class:"rounded-circle" %>
                      <%= post.user.name %>
                    <% end %>
                  </td>
                </tr>
              </tbody>
              <tbody>
                <tr>
                  <th scope="col">募集人数</th>
                  <th scope="col">参加型</th>
                  <th scope="col">募集状況</th>
                </tr>
              </body>
              <tbody>
                <tr>
                  <td>/<%= post.capacity %>人</td>

                  <!--自由参加または承認制のif文-->
                  <% if post.is_free? %>
                    <td class="text-primary">自由参加</td>
                      <% else %>
                    <td class="text-waring">オーナー承認制</td>
                  <% end %>

                  <!--募集関係　if-->
                  <% if post.is_stop? %>
                    <td class="text-danger">募集停止</td>
                      <% else %>
                    <td class="text-success">募集中</td>
                  <% end %>
                </tr>
              </tbody>
            <% end %>

      <% end %>
      </table>
  </div>

</div>
