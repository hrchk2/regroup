<% if @tag.blank? %>
  <div class="container">
    <div class="row mt-3">
      <div class="col-10 offset-1 col-sm-6 offset-sm-3 mt-3 mb-2 text-center">
        <h3>お探しのハッシュタグは、存在しないか</br>
            管理者によって削除されました。
        </h3>
        <%= link_to "一覧に戻る",admin_posts_path,class:"text-danger" %>
      </div>
    </div>
  </div>

<% else %>

  <div class="container">
    <div class="row mt-3">
      <div class="col-10 offset-1 col-sm-6 offset-sm-3 mb-2 ">
        <h1>#<%= @tag.name %></h1>
      </div>
    </div>
    
    <div class="row mt-2">
      <%= render "admin/posts/index", posts: @posts %>
    </div>
  </div>
<% end %>
