<div class="container">
  <div class="row mt-3">
    <div class="col-6 offset-2">

      <div class="card">
        <div class="text-center">
          <%= image_tag @user.get_profile_image, size:'150x150',class:"rounded-circle mt-3" %>
          <p class="mt-3"><%= @user.name %></p>
          <p class="mb-0"><%= @user.email %></p>
        </div>

        <div class="card-body">
          <div class="intro border-top py-3 ">
            <h5 class="card-title ml-5">自己紹介</h5>
            <p class="card-text ml-5"><%= @user.introduction %></p>
          </div>

          <div class="d-flex justify-content-around border-top py-3">
              <div><%= @user.following.count %>フォロー中</div>
              <div><%= @user.followers.count %>フォロワー</div>
          </div>

          <div class="d-flex justify-content-around border-top pt-3">
            <% if @user.is_deleted == false %>
            <div class="text-success font-weight-bold">有効</div>
              <% else %>
             <div class="text-secondary">無効</div>
            <% end %>
          </div>
          
          <div class="mt-3 text-center">
            <%= link_to edit_admin_user_path(@user),class:"btn btn-outline-info" do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
          </div>
        
        </div>
      </div>

    </div>
  </div>
</div>