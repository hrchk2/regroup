<div class="container">
  <div class="row mt-3">
    <div class="col-sm-6 offset-sm-3 mt-3 mb-2 ">
      <h1>ユーザー一覧</h1>

      <table class='table table-hover border mt-3'>
        <thead class="bg-light">
          <tr>
            <th>会員ID</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><u><%= link_to user.name ,admin_user_path(user)%></u></td>
              <td><%= user.email %></td>

              <% if user.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
              <% else %>
              <td class="text-secondary">無効</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
